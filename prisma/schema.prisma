generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Orden {
  id          Int         @id @default(autoincrement())
  cliente     String
  fecha       String
  estado      String
  descripcion String?
  asignadoA   String?
  itemOrdens  ItemOrden[]
}

model ItemOrden {
  id          Int    @id @default(autoincrement())
  etiqueta    String
  ancho       String
  alto        String
  tipoPerfil  String
  colorPerfil String
  tipoCristal String
  vias        Int
  orden       Orden  @relation(fields: [ordenId], references: [id])
  ordenId     Int
}
